<resources>
    <!-- Base application theme. -->
    <style name="Theme.GesuasChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="toolbarStyle">@style/Base.Toolbar</item>
        <item name="android:buttonStyle">@style/Base.Button</item>
    </style>

    <style name="Base.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:moreIcon">@drawable/ic_menu</item>
    </style>

    <style name="Base.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Base.Button.OutlinedBox" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_outlined_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Base.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
    </style>

    <style name="Base.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/selector_ration_button</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>