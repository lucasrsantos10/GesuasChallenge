<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="48dp"
    android:background="@drawable/rounded_button_enabled"
    android:backgroundTint="@color/white">
    
    <View
        android:id="@+id/vHandler"
        android:layout_width="73dp"
        android:layout_height="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_button_enabled"
        android:backgroundTint="#ACACAC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <ListView
        android:id="@+id/lvOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vHandler"
        android:layout_marginTop="89dp"
        android:divider="@null"
        android:textAlignment="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lvOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="76dp"
        android:layout_marginHorizontal="80dp"
        style="@style/Base.Button"
        android:text="@string/save"
        />


</androidx.constraintlayout.widget.ConstraintLayout>